            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="12sp"/>
        <Button
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="12sp"/>
        <Button
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="+5"
            android:textSize="12sp"/>
        <Button
